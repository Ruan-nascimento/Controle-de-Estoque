generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Item {
  id String @id @default(uuid())
  name String
  type String
  qtd Int @default(0)
  value Float @default(0)
  flavor String
  status String @default("Em Falta")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Sale {
  id        String     @id @default(uuid())
  codeOfSell String
  total     Float   
  createdAt DateTime   @default(now())
  items     SaleItem[]
}

model SaleItem {
  id        String   @id @default(uuid())
  saleId    String
  sale      Sale     @relation(fields: [saleId], references: [id])
  name      String 
  flavor    String  
  unitPrice Float 
  quantity  Int    
  createdAt DateTime @default(now())
}

model CartItem {
  id        String   @id @default(uuid())
  itemId    String
  name      String
  flavor    String
  value     Float
  quantity  Int
  qtd       Int  
  createdAt DateTime @default(now())
}

model FilterHistoric {
  id  String @id @unique
  start String
  end String
}

model FilterStock {
  id String @id @unique
  kind String
  flavor String
  status String
}